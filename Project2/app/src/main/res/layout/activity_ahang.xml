<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ahang">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="button17Clicked"
                android:text="뒤로" />

            <Button
                android:id="@+id/button16"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_toRightOf="@id/button17"
                android:text="등록" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text=" 내가 잡은 물고기"
        android:textColor="@color/colorAccent"
        android:textSize="23dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="283dp"
                android:layout_height="157dp"
                app:srcCompat="@drawable/ssogari" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019년 10월 2일 / 경기도 인천시 / 쏘가리" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="283dp"
                android:layout_height="155dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019년 10월 18일 / 경기도 포천시 / 숭어" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="283dp"
                android:layout_height="189dp"
                app:srcCompat="@drawable/boonga" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019년 11월 8일 / 강원도 화천군 / 붕어" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="283dp"
                android:layout_height="167dp"
                 />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019년 12월 5일 / 충청도 / 메기" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>