<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".Main">

    <Button
        android:id="@+id/btn_fishing"
        android:layout_width="134dp"
        android:layout_height="141dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/fishing"
        android:onClick="btn_fishingClicked" />

    <Button
        android:id="@+id/btn_board"
        android:layout_width="134dp"
        android:layout_height="141dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/btn_fishing"
        android:onClick="btn_boardClicked"
        android:background="@drawable/board"
        />

    <Button
        android:id="@+id/btn_stream"
        android:layout_width="134dp"
        android:layout_height="141dp"
        android:layout_below="@id/btn_fishing"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/youtube"
        android:onClick="btn_streamClicked" />

    <Button
        android:id="@+id/btn_inform"
        android:layout_width="134dp"
        android:layout_height="141dp"
        android:layout_below="@id/btn_board"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btn_stream"
        android:background="@drawable/map"
        android:onClick="btn_informClicked" />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="20dp"
        android:background="#1E90FF"
        android:onClick="btn_setClicked"


        android:text="환경설정" />

    <Button
        android:id="@+id/btn_mypage"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="70dp"
        android:background="#1E90FF"
        android:onClick="btn_mypageClicked"
        android:text="마이페이지" />

